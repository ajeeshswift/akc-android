<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plantsseed"
            android:layout_width="104dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="20dp"
            android:text="Plants/Seed" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="43dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_text_border" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sowingdate"
            android:layout_width="103dp"
            android:layout_height="31dp"
            android:layout_marginHorizontal="20dp"
            android:text="Sowing Date" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="43dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_text_border" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sapplingquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="Sappling Quantity" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="43dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_text_border" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/harvestdate"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Harvest Date" />
    <EditText
        android:layout_width="166dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_text_border" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/harvestquantity"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="1dp"
            android:text="Harvest Quantity" />
        <EditText
            android:layout_width="166dp"
            android:layout_height="43dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/edit_text_border" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ownhomeuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="Own/Home Use" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="43dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_text_border" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/soldquantity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="Sold Quantity" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="43dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_text_border" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/soldrate"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="Sold @ Rate" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="43dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_text_border" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalincome"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Total Income" />

   <EditText
                android:layout_width="166dp"
                android:layout_height="43dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edit_text_border" />
        </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="272dp"
        android:layout_height="38dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/btn_primary_background"
        android:text="SUBMIT"
        android:textColor="@color/colorWhite" />
</LinearLayout>